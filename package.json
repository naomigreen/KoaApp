{
  "name": "koa2-typescript-boilerplate",
  "version": "1.0.0",
  "engines": {
    "node": "6.3.0"
  },
  "description": "A boilerplate for using Koa2 with TypeScript",
  "main": "build/index.js",
  "scripts": {
    "test": "tsc && mocha build/test",
    "install-typings": "typings install",
    "build": "tsc",
    "watch": "nodemon -w lib -x npm run dev-server",
    "start": "node build/index.js",
    "dev-server": "ts-node lib/index.ts",
    "lint": "tslint lib/**/*.ts"
  },
  "keywords": [
    "typescript",
    "koa",
    "koa2"
  ],
  "author": "Naomi Prescod-Green",
  "license": "ISC",
  "dependencies": {
    "chalk": "^1.1.3",
    "dotenv": "^2.0.0",
    "handlebars": "^4.0.5",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.1.0",
    "koa-router": "^7.0.1",
    "koa-views": "^5.0.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^2.5.3",
    "nodemon": "^1.10.0",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.2.0",
    "ts-node": "^1.0.0",
    "tslint": "^3.13.0",
    "typescript": "^1.8.10",
    "typings": "^1.3.2"
  }
}
